@model PrintShop.Models.Entity.Product

@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<hr />

    <form asp-action="EditProduct">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductPkey" />
        @*First Row*@
        <div class="row">        
    <div class="col-md-4">       
            <div class="form-group">
                <p style="margin-bottom: -0.5%">Product Category</p>               
                <input asp-for="ProductCategory" class="form-control" />
                <span asp-validation-for="ProductCategory" class="text-danger"></span>
            </div>
    </div>
    <div class="col-md-4">
            <div class="form-group">
                <p style="margin-bottom: -0.5%">Stock Size</p>  
                <input asp-for="StockSize" class="form-control" />
                <span asp-validation-for="StockSize" class="text-danger"></span>
            </div>
   </div>
   </div>
   @*Second Row*@
           <div class="row">        
    <div class="col-md-4">                 
            <div class="form-group">
                <p style="margin-bottom: -0.5%">Description</p>               
                <input asp-for="ProductDesc" class="form-control" />
                <span asp-validation-for="ProductDesc" class="text-danger"></span>
            </div>
    </div>
    <div class="col-md-4">
            <div class="form-group">
                <p style="margin-bottom: -0.5%">Weight</p>  
                <input asp-for="ProductWeight" class="form-control" />
                <span asp-validation-for="ProductWeight" class="text-danger"></span>
            </div>
   </div>
   </div>
      @*Third Row*@
           <div class="row">        
    <div class="col-md-4">       
            <div class="form-group">
                <p style="margin-bottom: -0.5%">Vendor</p>               
                <input asp-for="ProductVendor" class="form-control" />
                <span asp-validation-for="ProductVendor" class="text-danger"></span>
            </div>
    </div>
    <div class="col-md-4">
            <div class="form-group">
                <p style="margin-bottom: -0.5%">Vendor Price</p>  
                <input asp-for="ProductVendorPrice" class="form-control" />
                <span asp-validation-for="ProductVendorPrice" class="text-danger"></span>
            </div>
   </div>
   </div>
      @*Fourth Row*@
           <div class="row">        
    <div class="col-md-4">       
            <div class="form-group">
                <p style="margin-bottom: -0.5%">Product Type</p>               
                <input asp-for="ProductType" class="form-control" />
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>
    </div>
    <div class="col-md-4">
            <div class="form-group">
                <p style="margin-bottom: -0.5%">Unit Cost</p>  
                <input asp-for="UnitCost" class="form-control" />
                <span asp-validation-for="UnitCost" class="text-danger"></span>
            </div>
   </div>
   </div>
         @*Fifth Row*@
           <div class="row">        
    <div class="col-md-4">       
            <div class="form-group">
                <p style="margin-bottom: -0.5%">Unit Type</p>               
                <input asp-for="UnitType" class="form-control" />
                <span asp-validation-for="UnitType" class="text-danger"></span>
            </div>
    </div>
   </div>
            <div class="form-group" style="margin-top: 1%">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
