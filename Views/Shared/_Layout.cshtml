<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PrintShop</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</head>
<body >
    <header>
         <nav class="navbar navbar-expand-lg bg-primary" style="padding-left: 25%; background-color: #005daa !important">
            <div class="container-fluid" >
                <div class="collapse navbar-collapse">
                     <img style="width: 150px; height: 50px; position:absolute; left: 3%" class="col-sm-3" src="~/images/COS_Logo.png" alt="City of Salem" />

                     <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                         <div class="row">
                    <ul class="navbar-nav flex-grow-1">
                        
                         <li class="nav-item" style="padding-right: 1%;">
                           <a class="nav-link hover-shadow" asp-area="" asp-controller="Home" asp-action="Index" style="color:white;margin-left: -100%; margin-top: 3%">PrintShop Main Menu</a>
                        </li>
                        <li class="nav-item" style="padding-right: 1%;">
                            <a class="nav-link zoom" asp-area="" asp-controller="CopiersOffice" asp-action="Index" style="color:white; margin-left: -100%;margin-top: 4% ">Copiers Office</a>
                        </li>
                        <li class="nav-item" style="padding-right: 1%;">
                            <a class="nav-link zoom" asp-area="" asp-controller="CopyCenter" asp-action="Index" style="color:white; margin-left: -100%;margin-top: 6% ">Printing</a>
                        </li>
                        <li class="nav-item" style="padding-right: 1%;">
                            <a class="nav-link zoom" asp-area="" asp-controller="Imaging" asp-action="Index" style="color:white; margin-left: -90%;margin-top: 6% ">Imaging</a>
                        </li>
                        <li class="nav-item" style="padding-right: 1%;">
                            <a class="nav-link zoom" asp-area="" asp-controller="MailTransactions" asp-action="Index" style="color:white; margin-top: 12%; margin-left: -125% ">Mail</a>
                        </li>

                @{
                var roles = @User.Claims.ToList();
                foreach(var r in roles)
                {
                if(r.Value == "Admin")
                {
                   <li class="nav-item" style="padding-right: 1%;">
                    <a class="nav-link zoom" asp-area="" asp-controller="Admin" asp-action="Index" style="color:white; margin-left: 300%; margin-top: 8%  ">Admin</a>
                   </li>
                }}}
                    
                     @{
                    var name = @User.Identity.AuthenticationType;
                    char delim = '\\';
                    var realName = name.Split(delim);
                }
                    
                    </ul>
                    </div>
                    <p style="color:white;">@realName[1]</p>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="text-align: center">
            &copy; 2022 - PrintShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/site.js"></script>
    <script src="~/js/getUser.js"></script>
    <script>
        $(document).ready(function () {
            getUser('@Url.Action("GetUserName", "Home")');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
